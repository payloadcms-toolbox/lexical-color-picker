{
  "name": "@payloadcms-toolbox/lexical-color-picker",
  "version": "0.0.6",
  "description": "A color picker feature for the Payload CMS Lexical editor.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/feature.client.d.ts",
      "import": "./dist/feature.client.js",
      "require": "./dist/feature.client.cjs"
    }
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/payloadcms-toolbox/lexical-color-picker/issues"
  },
  "homepage": "https://github.com/payloadcms-toolbox/lexical-color-picker#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payloadcms-toolbox/lexical-color-picker.git"
  },
  "author": {
    "name": "Evgenii Troinov",
    "url": "https://example.com"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@payloadcms/richtext-lexical": "^3",
    "react": ">=19.2.0"
  },
  "devDependencies": {
    "@pandacss/dev": "^1.4.1",
    "@park-ui/panda-preset": "^0.43.1",
    "@types/react": "^19.2.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "payload",
    "payloadcms",
    "lexical",
    "richtext",
    "feature",
    "color-picker"
  ]
